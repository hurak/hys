@article{kevenaarExtensionsChuaExplicit1994,
  title = {Extensions to {{Chua}}'s Explicit Piecewise-Linear Function Descriptions},
  author = {Kevenaar, T.A.M. and Leenaerts, D.M.W. and {van Bokhoven}, W.M.G.},
