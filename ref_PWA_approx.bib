@article{gorokhovikPiecewiseAffineFunctions1994,
  title = {Piecewise Affine Functions and Polyhedral Sets},
  author = {Gorokhovik, V. V. and Zorko, O. I. and Birkhoff, G.},
  year = {1994},
  month = jan,
  journal = {Optimization},
